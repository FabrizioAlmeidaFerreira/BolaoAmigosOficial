<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:padding="0dp"
    android:gravity="center"
    android:background="@android:color/background_light"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/ivTimeA"
            android:layout_weight="0.04" />

        <TextView
            android:text="Carregando..."
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeANome"
            android:layout_width="100dp"
            android:layout_weight="0.04"
            android:layout_gravity="left"
            android:gravity="top"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/tvTimeAPlacar"
            android:layout_weight="0.04"
            android:gravity="center"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

        <TextView
            android:text="X"
            android:layout_width="28dp"
            android:layout_height="24dp"
            android:id="@+id/textView2"
            android:layout_weight="0.04"
            android:padding="4dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimeBPlacar"
            android:layout_weight="0.04"
            android:gravity="center"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

        <TextView
            android:text="Carregando..."
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeBNome"
            android:layout_weight="0.04"
            android:gravity="right"
            android:layout_gravity="right"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/ivTimeB"
            android:layout_weight="0.04" />

    </LinearLayout>

    <TextView
        android:text="Carregando..."
        android:layout_width="match_parent"
        android:id="@+id/tvDataPartida"
        android:layout_weight="0.04"
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:layout_height="14dp"
        android:textSize="10sp" />

    <TextView
        android:text="Carregando..."
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_weight="0.04"
        android:gravity="center"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textSize="10sp"
        android:id="@+id/tvLocalPartida" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.04"
        android:background="@android:color/background_light"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:text="Seu Palpite"
            android:id="@+id/textView3"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_width="120dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="10sp"
            android:textStyle="normal|italic"
            android:layout_height="14dp"
            android:textColor="@android:color/black"
            android:paddingBottom="1dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:id="@+id/ivTimeAUser"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:ems="10"
                android:id="@+id/etPalpiteA"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:gravity="center_vertical|center"
                android:textColor="@android:color/black"
                android:textColorHint="?android:attr/textColorHint"
                android:textColorHighlight="@android:color/black"
                android:editable="true"
                android:enabled="true"
                android:inputType="number" />

            <TextView
                android:text="X"
                android:id="@+id/textView4"
                android:layout_height="24dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="28dp" />

            <EditText
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:ems="10"
                android:id="@+id/etPalpiteB"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:gravity="center_vertical|center"
                android:textColor="?android:attr/colorForeground"
                android:textColorHint="?android:attr/textColorHint"
                android:editable="true"
                android:enabled="true"
                android:inputType="number" />

            <ImageView
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:id="@+id/ivTimeBUser"
                android:layout_width="30dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        class="android.support.v4.widget.Space"
        android:id="@+id/view"
        android:layout_weight="0.04"
        android:background="@android:drawable/screen_background_dark_transparent" />

</LinearLayout>